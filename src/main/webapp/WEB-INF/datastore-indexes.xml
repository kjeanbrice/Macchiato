<?xml version="1.0" encoding="utf-8"?>
<datastore-indexes autoGenerate="false">

    <datastore-index kind="User" ancestor="false" source="auto">
        <property name="email" direction="asc"/>
        <property name="access" direction="asc"/>
    </datastore-index>

    <datastore-index kind="Course" ancestor="false" source="auto">
        <property name="name" direction="asc"/>
        <property name="course_code" direction="asc"/>
        <property name="description" direction="asc"/>
        <property name="section" direction="asc"/>
        <property name="email" direction="asc"/>
        <property name="id" direction="asc"/>
    </datastore-index>

    <datastore-index kind="Forum" ancestor="false" source="auto">
        <property name="course_name" direction="asc"/>
        <property name="email" direction="asc"/>
        <property name="course_id" direction="asc"/>
        <property name="section" direction="asc"/>
        <property name="id" direction="asc"/>
    </datastore-index>

    <datastore-index kind="Enrollment" ancestor="false" source="manual">
        <property name="forum_key" direction="asc"/>
        <property name="username" direction="asc"/>
        <property name="email" direction="asc"/>
    </datastore-index>


    <datastore-index kind="Post" ancestor="false" source="manual">
        <property name="forum_id" direction="asc"/>
        <property name="timestamp" direction="desc"/>
    </datastore-index>

    <datastore-index kind="Comment" ancestor="false" source="auto">
        <property name="content" direction="asc"/>
        <property name="timestamp" direction="desc"/>
        <property name="post_id" direction="asc"/>
        <property name="id" direction="asc"/>
    </datastore-index>

    <datastore-index kind="CommentLikes" ancestor="false" source="auto">
        <property name="email" direction="asc"/>
        <property name="comment_id" direction="asc"/>
    </datastore-index>

    <datastore-index kind="PostLikes" ancestor="false" source="auto">
        <property name="email" direction="asc"/>
        <property name="post_id" direction="asc"/>
    </datastore-index>

</datastore-indexes>
